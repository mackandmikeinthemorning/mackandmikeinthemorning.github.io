---
layout: null
---
<rss xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:atom="http://www.w3.org/2005/Atom" version="2.0">
<channel>
<title>{{ site.title }}</title>
<link>{{ site.url }}</link>
<language>{{ site.lang }}</language>
<itunes:subtitle></itunes:subtitle>
<itunes:author>{{ site.author }}</itunes:author>
<itunes:summary>{{ site.itunes_summary }}</itunes:summary>
<description>{{ site.description }}</description>
<itunes:owner>
    <itunes:name>{{ site.itunes_owner_name }}</itunes:name>
    <itunes:email>{{ site.itunes_owner_email }}</itunes:email>
</itunes:owner>
<itunes:explicit>{{ site.explicit }}</itunes:explicit>
<itunes:image href="{{ site.url }}/static/podcast-icon.jpg"></itunes:image>
<itunes:category text="Technology"></itunes:category>

{% for post in site.categories.podcast %}
<item>
    <title>{{ post.title | xml_escape }}</title>
    <itunes:episode>{{ post.episode_number }}</itunes:episode>
    <itunes:summary>{{ post.description | xml_escape }}</itunes:summary>
    <description>{{ post.description | xml_escape }}</description>
    <link>{{ site.url }}/{{ post.permalink }}</link>
    <enclosure url="{{ site.podcast_audio_prefix }}{{ post.audio_filename }}" type="audio/mpeg" length="{{ post.length }}"></enclosure>
    <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
    <itunes:author>{{ site.author }}</itunes:author>
    <itunes:duration>{{ post.duration }}</itunes:duration>
    <itunes:explicit>{{ post.explicit }}</itunes:explicit>
    {% if post.episode_type == "bonus" %}
    <itunes:episodeType>bonus</itunes:episodeType>
    {% endif %}
    <guid isPermaLink="true">{{ site.url }}/{{ post.permalink }}</guid>
</item> 
{% endfor %}

<atom:link href="{{ site.url }}/podcast.rss" rel="self" type="application/rss+xml" />
</channel>
</rss>
